<h3>{{ _('Configure anonymous usage tracking') }}</h3>

<p>{% trans %}
    TODO: Add explanation what this does and tracks
{% endtrans %}</p>

<div class="row-fluid">
    <a href="#" class="btn btn-danger span6" data-bind="click: function() { if(!setup()){disableTracking()}}, enable: !setup(), css: {disabled: setup()}">{{ _('Disable Usage Tracking') }}</a>
    <a href="#" class="btn btn-primary span6" data-bind="click: function() { if(!setup()){enableTracking()}}, enable: !setup(), css: {disabled: setup()}">{{ _('Enable Usage Tracking') }}</a>
</div>

<div class="tracking_decision" style="display: none" data-bind="visible: setup()">
    <div class="text-center" style="display: none" data-bind="visible: decision()">{% trans %}
        Anonymous usage tracking is <strong class="text-success">enabled</strong>.
    {% endtrans %}</div>
    <div class="text-center" style="display: none" data-bind="visible: !decision()">{% trans %}
        Anonymous usage tracking is <strong class="text-danger">disabled</strong>.
    {% endtrans %}</div>
</div>
